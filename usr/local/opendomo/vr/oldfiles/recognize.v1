# Try to run a command in ./Recognition/bin with useful errors.
function run_command() {
	while read line           
	do           
		export "$line"           
	done <$USER_DIR/UserInfo
    eval "./Recognition/bin/$1"

    if [ $? != 0 ];then
	./Recognition/bin/result Error "There was an error while running:" \
	"$1" ""
	exit 1
    fi
}

