#!/bin/bash

# To be updated with the specific command in OpenDomo
#Temporarily, an espeak command is issued
read ESPEAK < /etc/opendomo/speech/espeak.dat
switch=`grep -i $1 /etc/opendomo/speech/light.conf | cut -d ":" -f1 -`
if [ -z "$switch" ] 
then 
	$ESPEAK "No esta definida la zona"
	$ESPEAK $1
else	
	switch=`echo $switch | sed -e s/"info"/"value"/g`
	switch="/var/opendomo/control$switch"
	value=`cat $switch`
	if [ "$value" = "on" ]
	then
		setport.sh $switch "off" 	
		$ESPEAK "Apagando luces de"
		$ESPEAK $1
	else
		$ESPEAK "Ya estÃ¡ apagada la zona"
		$ESPEAK $1
	fi 	
fi 

