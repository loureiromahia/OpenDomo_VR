#!/bin/bash

# To be updated with the specific command in OpenDomo
#Temporarily, an espeak command is issued
grep -i  $1 /etc/opendomo/places/* >/dev/null 2>&1
read ESPEAK < /etc/opendomo/speech/espeak.dat
if [[ $? -eq 0 ]] 
then 
        $ESPEAK "Switching OFF lights of"
        $ESPEAK $1
else 
        $ESPEAK "It is not defined the zone "
        $ESPEAK $1
fi 

